{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"importHelpers": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["esnext", "dom"],
		"types": [
			"express",
			"node",
			"connect-history-api-fallback",
			"helmet",
			"bcryptjs",
			"jsonwebtoken",
			"gravatar",
			"express-validator"
		]
	},
	"exclude": ["node_modules", ".npm"]
}
